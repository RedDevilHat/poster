{% macro render_array_values(value, inline) %}
    {% from _self import render_array %}
    {% for key, val in value %}
        {% if val is iterable %}
            {{ render_array(val, inline) }}
        {% else %}
            {{ val|trans }}
        {% endif %}
        {% if not loop.last and not inline %}
            <br>
        {% endif %}
    {% endfor %}
{% endmacro %}
