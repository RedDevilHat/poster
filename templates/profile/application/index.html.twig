{% extends 'profile/profile_application_layout.html.twig' %}

{% block _content %}
  {% trans_default_domain 'ProfileApplication' %}

  <h1 class="page-header">
    {{ 'Applications'|trans }}
    <div class="pull-right">
      <a href="{{ path('profile_application_new') }}" class="btn btn-primary">{{ 'Create new'|trans }}</a>
    </div>
  </h1>
  <table class="table">
    <thead>
    <tr>
      <th>{{ 'Name'|trans }}</th>
      <th>{{ 'Public id'|trans }}</th>
      <th class="text-right">{{ 'Action'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for application in applications %}
      <tr>
        <td>{{ application.name }}</td>
        <td>{{ application.publicId }}</td>
        <td class="text-right">
          <div class="btn btn-group">
            <a href="{{ path('profile_application_show', {'id': application.id}) }}" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-eye-open"></span>
              {{ 'Show'|trans }}
            </a>
            <a href="{{ path('profile_application_edit', {'id': application.id}) }}" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-pencil"></span>
              {{ 'Edit'|trans }}
            </a>
          </div>
        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="3">{{ 'No records found'|trans }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

{% endblock %}
