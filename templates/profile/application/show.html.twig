{% extends 'profile/profile_application_layout.html.twig' %}

{% block _content %}
  {% trans_default_domain 'ProfileApplication' %}

  <h1 class="page-header">
    <div class="pull-right">
      {{ include('profile/application/_delete_form.html.twig') }}
    </div>
    {{ 'Application'|trans }}
  </h1>

  <div class="clearfix">
    <a href="{{ path('profile_application_edit', {'id': application.id}) }}" class="btn btn-default pull-right">{{ 'Edit'|trans }}</a>
    <a href="{{ path('profile_application_index') }}" class="btn btn-default">{{ 'Back to list'|trans }}</a>
  </div>
  <hr>

  <table class="table">
    <tbody>
    <tr>
      <th>{{ 'Name'|trans }}</th>
      <td>{{ application.name }}</td>
    </tr>
    <tr>
      <th>{{ 'Public id'|trans }}</th>
      <td>{{ application.publicId }}</td>
    </tr>
    <tr>
      <th>{{ 'Secret'|trans }}</th>
      <td>{{ application.secret }}</td>
    </tr>
    <tr>
      <th>{{ 'Redirect URI'|trans }}</th>
      <td>
        <ul class="list-unstyled">
          {% for uri in application.redirectUris %}
            <li>{{ uri }}</li>
          {% endfor %}
        </ul>
      </td>
    </tr>
    <tr>
      <th>{{ 'Allowed grant types'|trans }}</th>
      <td>
        <ul class="list-unstyled">
          {% for allowedGrantType in application.allowedGrantTypes %}
            <li>{{ allowedGrantType|trans }}</li>
          {% endfor %}
        </ul>
      </td>
    </tr>
    </tbody>
  </table>



{% endblock %}
